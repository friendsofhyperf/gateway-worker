{
    "name": "friendsofhyperf/gateway-worker",
    "description": "The gateway-worker component for Hyperf.",
    "type": "library",
    "keywords": [
        "hyperf",
        "gateway-worker",
        "websocket"
    ],
    "homepage": "https://github.com/friendsofhyperf/gateway-worker",
    "license": "MIT",
    "authors": [{
        "name": "huangdijia",
        "email": "huangdijia@gmail.com"
    }],
    "require": {
        "php": ">=8.1",
        "hyperf/command": "~3.0.0",
        "hyperf/config": "~3.0.0",
        "hyperf/engine-swow": "^2.3",
        "hyperf/event": "~3.0.0",
        "hyperf/framework": "~3.0.0",
        "hyperf/macroable": "~3.0.0",
        "workerman/gateway-worker": "dev-master as 4.0.0",
        "workerman/gatewayclient": "^3.0.13"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-mock": "^2.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "FriendsOfHyperf\\GatewayWorker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "FriendsOfHyperf\\GatewayWorker\\Tests\\": "tests/"
        }
    },
    "extra": {
        "hyperf": {
            "config": "FriendsOfHyperf\\GatewayWorker\\ConfigProvider"
        },
        "branch-alias": {
            "dev-main": "2.x-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "analyse": "@php vendor/bin/phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./src",
        "cs-fix": "@php vendor/bin/php-cs-fixer fix $1",
        "test": "@php vendor/bin/pest"
    }
}
